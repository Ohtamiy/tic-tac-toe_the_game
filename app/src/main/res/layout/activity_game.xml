<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_game_text"
        android:textSize="@dimen/game_text_size"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:id="@+id/tictactoeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_width_height_filed"
        android:minWidth="@dimen/min_width_height_filed"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_alignStart="@id/buttons"
        android:layout_alignEnd="@id/buttons"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tictactoeField"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_button"
            android:text="@string/exit_btn"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_button"
            android:text="@string/play_again_btn"
            android:textSize="@dimen/button_text_size" />

    </LinearLayout>

</RelativeLayout>